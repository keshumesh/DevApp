    <div class="container-fluid content">
        <div class="text-center logoContainer">
            <img class="logo" src="/assets/logo.png">
        </div>
        <div class="pageContent">
            <h3 class="text-center whiteColor">Login</h3>
            <div class="loginContainer">
                <div class="loginWrapper">
                    <%= form_tag sessions_path do |form| %>
                        <div class="form-group usernameGroup">
                            <div class="input-group inputGroup">
                                <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-envelope formControlIcon"></span></span>
				<%= email_field_tag :email, '', class: 'form-control formControl', placeholder: "Email", :required => true %>
                            </div>
                        </div>
                        <div class="form-group clearBottomMargin">
                            <div class="input-group inputGroup">
                                <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-lock formControlIcon"></span></span>
				 <%= password_field_tag :password, '', class: 'form-control formControl', placeholder: "Password", :required => true %>
                                <span class="input-group-addon inputGroupAddon inputGroupAddonPassword"><span class="glyphicon glyphicon-eye-close formControlIcon"></span></span>
                            </div>
                        </div>
                        <div class="form-group clearfix forgotPasswordGroup">
                            <button type="button" class="btn btn-default forgotPasswordBtn pull-right">Forgot Password?</button>
                        </div>
                        <% if flash[:notice] %>
  				<div style="color:red;text-align:center;" class="is-primary global-notification">
    					<p class="notice"><%= notice %></p>
  				</div>
			<% end %>
                        <%= submit_tag "Login", :class => 'btn btn-default loginBtn buttonGradient' %>
                    <% end %>
                </div>

            </div>
            <div class="form-group text-center alreadyHaveAccount">
                    Don't have an account yet?  <%= link_to "Register Here", signup_path, :class => "btn clearBtnStyle accountLoginBtn" %> 
                </div>

        </div>
    </div>
    
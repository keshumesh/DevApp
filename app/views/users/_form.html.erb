<div class="container-fluid content">
        <div class="text-center logoContainer">
            <img class="logo" src="/assets/logo.png">
        </div>
        <div class="pageContent signupPageContent">
            <h3 class="text-center whiteColor"><% if current_user.present? %> Edit <% else %> Signup<% end %></h3>
            <div class="loginContainer">
                <div class="loginWrapper">
		   <%= form_for @user, multiple: true do |f| %>
                        <div class="form-group usernameGroup">
                            <div class="input-group inputGroup">
                                <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-user formControlIcon"></span></span>
				<%= f.text_field :name, :placeholder=>"Full Name",  :class=>"form-control formControl", :required => true %>
                            </div>
                        </div>
                        <div class="form-group usernameGroup">
                            <div class="input-group inputGroup">
                                <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-envelope formControlIcon"></span></span>
				<%= f.email_field :email, :placeholder=>"Email",  :class=>"form-control formControl", :required => true %>
                            </div>
                        </div>
			 <% if !current_user.present? %>
				<div class="form-group">
                            		<div class="input-group inputGroup">
                                		<span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-lock formControlIcon"></span></span>
							<%= f.password_field :password, :placeholder=>"Password",  :class=>"form-control formControl", :required => true %>
                                		<span class="input-group-addon inputGroupAddon inputGroupAddonPassword"><span class="glyphicon glyphicon-eye-close formControlIcon"></span></span>
                            		</div>
                        	</div>
			 <% end %>
                        
                        <div class="form-group usernameGroup">
                            <div class="input-group inputGroup">
                                <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-earphone formControlIcon"></span></span>
				<%= f.number_field :phone, :placeholder=>"Phone Number",  :class=>"form-control formControl" %>
                            </div>
                        </div>
                           

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group usernameGroup">
                                    <div class="input-group inputGroup">
                                        <span class="input-group-addon inputGroupAddon"><span class="fa fa-venus-mars formControlIcon"><img src="/assets/gender-symbols.png" /></span></span>
					<%# <%= f.text_field :gender, :placeholder=>"Gender",  :class=>"form-control formControl" %>
					<%# <%= f.select :gender, [["Select Gender", ""],['Male', 'M'], ['Female', 'F']],  :class=>"form-control formControl"  %>
					<%= f.select(:gender, [['Male', 'M'], ['Female', 'F']], {include_blank: "Select Gender"}, { :class => 'form-control formControl' }) %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group usernameGroup">
                                    <div class="input-group inputGroup">
                                        <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-calendar formControlIcon"></span></span>
					<%= f.date_field :dob, :placeholder=>"Birthdate",  :class=>"form-control formControl" %>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group usernameGroup">
                            <div class="input-group inputGroup">
                                <span class="input-group-addon inputGroupAddon"><span class="glyphicon glyphicon-map-marker formControlIcon"></span></span>
 				<%= f.text_field :address, :placeholder=>"Address",  :class=>"form-control formControl" %>
                                <span class="input-group-addon inputGroupAddon inputGroupAddonPassword"><span class="glyphicon glyphicon-screenshot formControlIcon"></span></span>
                            </div>
                        </div>
                        
			<%= f.submit 'Signup',   :class=>"btn btn-default loginBtn buttonGradient" %>
                    <% end %>
                </div>

            </div>
            <div class="form-group text-center alreadyHaveAccount">
                    Already have an account? <%= link_to "Log In", login_path, :class => "btn clearBtnStyle accountLoginBtn" %> 
                </div>
        </div>
    </div>
    